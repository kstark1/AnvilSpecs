<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- 
This specification introduces the concept of a VALUESET (attribute
valuetype).

We create two tracks. The second track contains an attribute of type
"ValueSet" where the user defines a set of fixed tokens for the
annotator to choose from.
-->

<annotation-spec>
  <body>
    <track-spec name="words" type="primary">
      <attribute name="token" valuetype="String" />
    </track-spec>

    <track-spec name="gesture phase" type="primary">
      <attribute name="type">
        <value-el>preparation</value-el>
        <value-el>stroke</value-el>
        <value-el>hold</value-el>
        <value-el>retraction</value-el>
      </attribute>
    </track-spec>
  </body>
</annotation-spec>

